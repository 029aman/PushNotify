<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Customer</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/customers/<%= customer._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">UID/Name</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="customer[title]"
          value="<%= customer.title %> "
          required 
          readonly
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="customer[location]"
          value="<%= customer.location %> "
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Income</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            name="customer[price]"
            aria-describedby="price-label"
            value="<%= customer.price %> "
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="customer[description]"
          required
        >
<%= customer.description %> </textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Add Images</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <% customer.images.forEach((img, i) => { %>
        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            name="deleteImages[]"
            id="image-<%= i %>"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%= i %>">Delete?</label>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-warning">Update Customer</button>
      </div>
    </form>
    <a href="/customers/<%=customer._id %>" class="btn btn-info">Back To customer</a>
  </div>
</div>
